@model IEnumerable<NGOassignment.Models.UserNGO>

@{
    ViewBag.Title = "Welcome Admin";
}
@{
    Layout = "~/Views/Shared/view.cshtml";
}
@Styles.Render("~/Content/Login.css")

<h2>Index</h2>
<p>
    @Html.ActionLink("Add news", "Create", new { @class = "addnew" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Last_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Role)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.First_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Last_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.UserID, @class = "addnew" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.UserID, @class = "addnew" })
            </td>
        </tr>
    }

</table>
